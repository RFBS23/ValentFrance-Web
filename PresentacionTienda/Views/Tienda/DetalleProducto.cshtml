@model Entidad.Productos

@{
    ViewBag.Title = "DetalleProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pagetitle">
    <h1>Detalles del producto</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Tienda")">Inicio</a></li>
            <li class="breadcrumb-item active">Detalles del producto</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<!-- Product section-->
<section class="mb-0">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6">
                <!-- Imagen principal -->
                <img id="mainImage" class="card-img-top mb-5 mb-md-0 rounded-4" src="data:image/@Html.DisplayTextFor(m => m.Extension);base64,@Html.DisplayTextFor(m => m.base64)" alt="..." height="450" />
            </div>
            <div class="col-md-6">
                <!-- Cuadros para mostrar otras imágenes -->
                <div class="row row-cols-3 mb-3">
                    <div class="col">
                        <div class="thumbnail">
                            <img src="data:image/@Html.DisplayTextFor(m => m.Extension);base64,@Html.DisplayTextFor(m => m.base64)" class="img-thumbnail rounded-4" alt="..." onclick="changeImage('data:image/@Html.DisplayTextFor(m => m.Extension);base64,@Html.DisplayTextFor(m => m.base64)')" />
                        </div>
                    </div>
                    <div class="col">
                        <div class="thumbnail">
                            <img src="../assets/img/baner3.png" class="img-thumbnail rounded-4" alt="..." onclick="changeImage('../assets/img/baner3.png')" />
                        </div>
                    </div>
                    <div class="col">
                        <div class="thumbnail">
                            <img src="../assets/img/banner.png" class="img-thumbnail rounded-4" alt="..." onclick="changeImage('../assets/img/banner.png')" />
                        </div>
                    </div>
                </div>
                <!-- Descripción del producto -->
                <div class="small mb-1">SKU: @Html.DisplayTextFor(m => m.codigo)</div>
                <h1 class="display-5 fw-bolder">@Html.DisplayTextFor(m => m.nombre)</h1>
                <div class="fs-5 mb-5">
                    <span>@Html.DisplayTextFor(m => m.precioventa) S/</span>
                </div>
                <p class="lead">@Html.DisplayTextFor(m => m.descripcion)</p>
                <!-- Cantidad y botón para agregar al carrito -->
                <div class="d-flex">
                    <!-- <input class="form-control text-center me-3" id="inputQuantity" type="number" value="1" style="max-width: 3rem" min="1" max="60" /> -->                  
                    <a class="text-center btn btn-outline-success flex-shrink-0" href="@Url.Action("Masproductos", "Tienda")" style="text-decoration: none;">
                        <i class="bi bi-arrow-counterclockwise"></i> Regresar
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts {
    <script>
        function changeImage(newSrc) {
            document.getElementById("mainImage").src = newSrc;
        }
        
    </script>
}