
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es-es">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Cambiar Contraseña - Valent France</title>
    <meta content="" name="description">
    <meta content="" name="keywords">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body style="user-select: none;">
    <main>
        <div class="container-fluid d-flex justify-content-center align-items-center min-vh-100">
            <div class="container py-3">
                <div class="p-5 bg-body-secondary rounded-3">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="p-5 bg-body-dark rounded-3">
                                <h4 class="mb-4">Hola 	&#x1F44B;</h4>
                                <h5>
                                    <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i> @ViewData["nombreapellidos"]</span>
                                </h5>
                                <p>Necesitamos que cambies tu contraseña por temas de seguridad</p>
                                <img src="~/Assets/img/logovalent.png" height="150" width="150" class="rounded  img-fluid justify-content-center" alt="logo">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-5 bg-body-tertiary border rounded-3">
                                <form class="row g-3 needs-validation" action="@Url.Action("CambiarClave", "Login")" autocomplete="off" method="post" novalidate>
                                    <input class="form-control" type="hidden" value="@TempData["idcliente"]" name="idcliente" />
                                    <div class="form-floating mb-3">
                                        <input type="password" class="form-control" name="claveactual" placeholder="gg" value="@ViewData["vclave"]" required>
                                        <label for="floatingInput">Contraseña antigua</label>
                                        <div class="invalid-feedback">Ingrese la contraseña antigua.</div>
                                    </div>
                                    <div class="form-floating">
                                        <input type="password" class="form-control" name="nuevaclave" placeholder="df" required>
                                        <label for="floatingPassword">Contraseña nueva</label>
                                        <div class="invalid-feedback">Ingrese una contraseña nueva.</div>
                                    </div>
                                    <div class="form-floating">
                                        <input type="password" class="form-control" name="confirmarclave" placeholder="df" required>
                                        <label for="floatingPassword2">Repite la contraseña</label>
                                        <div class="invalid-feedback">Repita la contraseña nueva.</div>
                                    </div>
                                    @{
                                        if (ViewBag.Error != null)
                                        {
                                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                                <i class="bi bi-exclamation-octagon me-1"></i>
                                                @ViewBag.Error
                                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                            </div>
                                        }
                                    }
                                    <div class="col-12">
                                        <button class="btn btn-primary w-100" type="submit">Cambiar Contraseña</button>
                                    </div>
                                    <div class="col-12">
                                        <p class="small mb-0"> <a href="@Url.Action("Index", "Login")" class="text-success" style="text-decoration: none;">Regresar</a></p>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script src="~/Scripts/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
